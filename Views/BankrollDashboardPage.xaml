                    <tabView:SfTabItem.Content>
                        <Label
                            BackgroundColor="Blue"
                            FontSize="24"
                            HorizontalOptions="Center"
                            Text="Contacts Tab Content"
                            TextColor="White"
                            VerticalOptions="Center" />
                    </tabView:SfTabItem.Content>
                </tabView:SfTabItem>
                <!--  Fourth tab item  -->
                <tabView:SfTabItem
                    Margin="0,10"
                    FontFamily="Lato"
                    Header="{x:Static lan:AppResource.LblMoreOptions}"
                    ImageTextSpacing="0"
                    TextColor="White">
                    <tabView:SfTabItem.ImageSource>
                        <FontImageSource
                            FontFamily="ma"
                            Glyph="{x:Static common:DtoMaterialIconFont.More_vert}"
                            Size="25"
                            Color="White" />
                    </tabView:SfTabItem.ImageSource>
                    <tabView:SfTabItem.Content>
                        <Label
                            BackgroundColor="Blue"
                            FontSize="24"
                            HorizontalOptions="Center"
                            Text="Contacts Tab Content"
                            TextColor="White"
                            VerticalOptions="Center" />
                    </tabView:SfTabItem.Content>
                </tabView:SfTabItem>
            </tabView:SfTabView.Items>
        </tabView:SfTabView>
        <Button
            AbsoluteLayout.LayoutBounds="0.95,0.97"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            BackgroundColor="{x:StaticResource Green}"
            Command="{Binding NewBetCommand}"
            CornerRadius="30"
            FontSize="24"
            HeightRequest="60"
            TextColor="White"
            WidthRequest="60">
            <Button.Shadow>
                <Shadow
                    Brush="Black"
                    Radius="5"
                    Offset="3,3" />
            </Button.Shadow>
            <Button.ImageSource>
                <FontImageSource
                    FontFamily="ma"
                    Glyph="{x:Static common:DtoMaterialIconFont.Add}"
                    Size="30"
                    Color="White" />
            </Button.ImageSource>
        </Button>
        <!--  Overlay de espera  -->
        <ContentView
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            AbsoluteLayout.LayoutFlags="All"
            BackgroundColor="LightGray"
            IsVisible="{Binding IsBusy}"
            Opacity="0.2" />
        <inputLayout:SfBusyIndicator
            AbsoluteLayout.LayoutBounds=".5,.5"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            AnimationType="CircularMaterial"
            HeightRequest="100"
            IndicatorColor="White"
            IsRunning="{Binding IsBusy}"
            VerticalOptions="Center"
            WidthRequest="100" />
    </AbsoluteLayout>
