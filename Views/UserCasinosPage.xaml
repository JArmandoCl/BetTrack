<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BetTrack.Views.UserCasinosPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:common="clr-namespace:BetTrack.Dtos"
    xmlns:inputLayout="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
    xmlns:local="clr-namespace:BetTrack.Resources.Languages"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Title="Casinos">
    <ContentPage.ToolbarItems>
        <ToolbarItem Command="{Binding GoToImportCasinoCommand}">
            <ToolbarItem.IconImageSource>
                <FontImageSource
                    FontFamily="fa"
                    Glyph="{x:Static common:DtoIconFont.MagnifyingGlassPlus}"
                    Size="18"
                    Color="White" />
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
        <ToolbarItem Command="{Binding DeleteCommand}">
            <ToolbarItem.IconImageSource>
                <FontImageSource
                    FontFamily="fa"
                    Glyph="{x:Static common:DtoIconFont.Trash}"
                    Size="18"
                    Color="White" />
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Resources>
        <ResourceDictionary>
            <toolkit:InvertedBoolConverter x:Key="InvertedBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <AbsoluteLayout>
        <Grid
            Margin="0,10,0,0"
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            AbsoluteLayout.LayoutFlags="All"
            IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}"
            RowDefinitions="auto,*">
            <Border Stroke="{x:StaticResource Green}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="40" />
                </Border.StrokeShape>
                <SearchBar
                    x:Name="searchBar"
                    BackgroundColor="{StaticResource SecondaryDarkBlue}"
                    Keyboard="Text"
                    Placeholder="{x:Static local:AppResource.LblSearchPlaceholder}"
                    SearchCommand="{Binding PerformSearchCommand}"
                    SearchCommandParameter="{Binding Text, Source={x:Reference searchBar}}"
                    Text="{Binding SearchText}"
                    TextColor="White" />
            </Border>
            <CollectionView
                Grid.Row="1"
                ItemsSource="{Binding UserCasinos}"
                SelectedItems="{Binding SelectedCasinos, Mode=TwoWay}"
                SelectionChangedCommand="{Binding PerformActionToCasinoCommand}"
                SelectionMode="Multiple">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,5">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="10" />
                            </Border.StrokeShape>
                            <Grid ColumnDefinitions="auto,auto">
                                <Image
                                    Grid.Column="0"
                                    HeightRequest="50"
                                    Source="{Binding Icono, Mode=TwoWay}" />
                                <Label
                                    Grid.Column="1"
                                    Margin="10"
                                    Text="{Binding Nombre}"
                                    TextColor="White"
                                    VerticalTextAlignment="Center" />
                            </Grid>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup Name="CommonStates">
                                    <VisualState Name="Normal">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="{StaticResource SecondaryDarkBlue}" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState Name="Selected">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="{StaticResource Gray600}" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
        <inputLayout:SfBusyIndicator
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            AbsoluteLayout.LayoutFlags="All"
            AnimationType="LinearMaterial"
            HeightRequest="10"
            IndicatorColor="White"
            IsRunning="{Binding IsBusy}"
            VerticalOptions="Start" />
    </AbsoluteLayout>
</ContentPage>