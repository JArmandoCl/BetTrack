<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BetTrack.Views.TipstersListPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:common="clr-namespace:BetTrack.Dtos"
    xmlns:inputLayout="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
    xmlns:local="clr-namespace:BetTrack.Resources.Languages"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Name="Tipsters"
    Title="Tipsters">
    <ContentPage.Resources>
        <ResourceDictionary>
            <toolkit:InvertedBoolConverter x:Key="InvertedBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.ToolbarItems>
        <ToolbarItem Command="{Binding GoToNewTipsterCommand}">
            <ToolbarItem.IconImageSource>
                <FontImageSource
                    FontFamily="fa"
                    Glyph="{x:Static common:DtoIconFont.UserPlus}"
                    Size="18"
                    Color="White" />
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    <AbsoluteLayout>
        <Grid
            Margin="0,10,0,0"
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            AbsoluteLayout.LayoutFlags="All"
            IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}"
            RowDefinitions="auto,*">
            <Border Stroke="{x:StaticResource Green}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="40" />
                </Border.StrokeShape>
                <SearchBar
                    x:Name="searchBar"
                    BackgroundColor="{StaticResource SecondaryDarkBlue}"
                    Keyboard="Text"
                    Placeholder="{x:Static local:AppResource.LblSearchPlaceholder}"
                    SearchCommand="{Binding PerformSearchCommand}"
                    SearchCommandParameter="{Binding Text, Source={x:Reference searchBar}}"
                    Text="{Binding SearchText}"
                    TextColor="White" />
            </Border>
            <CollectionView
                Grid.Row="1"
                ItemsSource="{Binding Tipsters}"
                SelectedItem="{Binding SelectedTipster}"
                SelectionChangedCommand="{Binding PerformActionToTipsterCommand}"
                SelectionMode="Single">
                <CollectionView.EmptyView>
                    <ContentView>
                        <Grid
                            HorizontalOptions="Center"
                            RowDefinitions="auto,auto"
                            VerticalOptions="Center">
                            <Label
                                FontFamily="fa"
                                FontSize="50"
                                HorizontalOptions="Center"
                                Text="{x:Static common:DtoIconFont.Users}"
                                TextColor="LightGray"
                                VerticalOptions="Start" />
                            <Label
                                Grid.Row="1"
                                HorizontalOptions="Center"
                                HorizontalTextAlignment="Center"
                                Text="{x:Static local:AppResource.LblEmptyTipsterList}"
                                TextColor="LightGray" />
                        </Grid>
                    </ContentView>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout>
                            <Border Margin="0,5" BackgroundColor="{StaticResource SecondaryDarkBlue}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10" />
                                </Border.StrokeShape>
                                <Label
                                    Margin="10"
                                    Text="{Binding NombreTipster}"
                                    TextColor="White" />
                            </Border>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup Name="CommonStates">
                                    <VisualState Name="Normal" />
                                    <VisualState Name="Selected">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="{StaticResource Gray600}" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
        <inputLayout:SfBusyIndicator
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            AbsoluteLayout.LayoutFlags="All"
            AnimationType="LinearMaterial"
            HeightRequest="10"
            IndicatorColor="White"
            IsRunning="{Binding IsBusy}"
            VerticalOptions="Start" />
    </AbsoluteLayout>
</ContentPage>